<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="8dp"
    android:padding="10dp"
    app:cardBackgroundColor="@color/cream"
    app:cardCornerRadius="0dp"
    app:cardElevation="0dp"
    tools:ignore="HardcodedText">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />

    <!--    android:background="#99CCCCCC"-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="22dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/iv_dp"
            android:layout_width="34dp"
            android:layout_height="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-2dp"
            android:fontFamily="@font/poppins"
            android:text="Siddharth Sharma"
            android:textColor="@color/black"
            android:textSize="12dp"
            app:layout_constraintStart_toEndOf="@id/iv_dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/user_doubt_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:text="2 hours ago"
            android:textColor="@color/grey"
            android:textSize="12dp"
            app:layout_constraintStart_toStartOf="@id/tv_username"
            app:layout_constraintTop_toBottomOf="@id/tv_username" />

        <TextView
            android:id="@+id/user_doubt_heading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Heading"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_dp" />

        <TextView
            android:id="@+id/user_doubt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins"
            android:linksClickable="true"
            android:maxLines="5"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@id/user_doubt_heading" />

        <ImageView
            android:id="@+id/iv_votes"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="14dp"
            android:src="@drawable/ic_baseline_thumb_up_off_alt_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_doubt_description"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_votes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:text="211"
            android:textColor="@color/grey"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/iv_votes"
            app:layout_constraintTop_toTopOf="@id/iv_votes" />


        <ImageView
            android:id="@+id/iv_answers"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_outline_short_text_24"
            app:layout_constraintStart_toEndOf="@id/tv_votes"
            app:layout_constraintTop_toTopOf="@id/iv_votes"
            app:tint="@color/grey" />

        <TextView
            android:id="@+id/tv_answers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:fontFamily="@font/poppins"
            android:text="23"
            android:textColor="@color/grey"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/iv_answers"
            app:layout_constraintTop_toTopOf="@id/iv_answers" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>